%html
	%head
	%title Adeeb Ahmed - Blog
	%link{rel: "stylesheet", href: " https://secure.static.tumblr.com/zkqisnq/H7po6128v/screen.css"}
	%body
	%header#header
		%h1.title {Title}
		%h3.title {description}
		#flex-container
			{block:Posts}
			{block:Text}
				%article
					%header
						%h4.postType Blog Post
						{block:Title}
							%h2.postTitle
								%a{ :href => "{Permalink}"} {Title}
						{/block:Title}
					.section	
						.main 
							{body}
					%footer
						%a.postDate{:href => "{Permalink}"} Posted on {Month} {DayOfMonth}, {Year}
			{/block:Text}
			{/block:Posts}

